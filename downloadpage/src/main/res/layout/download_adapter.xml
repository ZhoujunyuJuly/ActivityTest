<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="wrap_content"
    android:id="@+id/layout_recyclerview">

    <ImageView
        android:id="@+id/iv_app"
        android:layout_width="85dp"
        android:layout_height="85dp"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="10dp"
        android:src="@mipmap/ic_launcher_round"/>

    <TextView
        android:id="@+id/tv_app_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/iv_app"
        android:layout_alignLeft="@id/iv_app"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="15dp"
        android:text="Android Studio"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@id/tv_app_name"
        android:background="@color/colorPrimaryDark"
        android:layout_margin="10dp"/>


    <Button
        android:id="@+id/bt_download"
        android:layout_width="100dp"
        android:layout_height="40dp"
        android:textAlignment="center"
        android:layout_alignParentRight="true"
        android:layout_marginRight="50dp"
        android:layout_centerVertical="true"
        android:background="@drawable/download_button"
        android:text="点击下载" />

    <ProgressBar
        android:id="@+id/progress_first"
        style="@style/Widget.AppCompat.ProgressBar.Horizontal"
        android:layout_width="100dp"
        android:layout_height="5dp"
        android:layout_below="@+id/bt_download"
        android:layout_marginTop="55dp"
        android:layout_alignLeft="@id/bt_download"
        android:max="100"
        android:outlineAmbientShadowColor="@color/colorPrimaryDark"
        android:progress="0"
        android:visibility="invisible" />

    <TextView
        android:id="@+id/tv_progress_percent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/progress_first"
        android:layout_alignLeft="@id/progress_first"
        android:text="3%"
        android:layout_marginLeft="45dp"
        android:visibility="invisible"/>



</RelativeLayout>